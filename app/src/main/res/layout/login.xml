<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="25dp"
    android:background="#b36da6"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#ffffff"
        android:layout_marginBottom="13dp"
        android:textSize="26sp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/inputUsername"
        android:inputType="textPersonName"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="#ffffff"
        android:layout_below="@+id/login"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="28dp"
        android:layout_toEndOf="@+id/username_label" />

    <EditText
        android:id="@+id/inputPassword"
        android:inputType="textPassword"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="#ffffff"
        android:layout_below="@+id/inputUsername"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="37dp"
        android:layout_toEndOf="@+id/password" />

    <TextView
        android:id="@+id/username_label"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Username"
        android:textSize="18sp"
        android:layout_marginRight="20dp"
        android:layout_above="@+id/inputPassword"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginRight="20dp"
        android:layout_alignTop="@+id/inputPassword"
        android:textSize="18sp" />

    <Button
        android:id="@+id/takemetochat"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="CHAT"
        android:textSize="19sp"
        android:padding="5dp"
        android:background="#f7754285"
        android:layout_alignTop="@+id/jobsbutton"
        android:layout_alignEnd="@+id/inputPassword" />

    <Button
        android:id="@+id/jobsbutton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="JOBS"
        android:layout_marginRight="5dp"
        android:textSize="19sp"
        android:padding="5dp"
        android:background="#f7754285"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/insert"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="tailor this log you in!"
        android:layout_below="@+id/takemetochat"
        android:layout_centerHorizontal="true" />

    <!-- Link to Registration Screen -->
    <Button
        android:id="@+id/link_to_signup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Just joining?  Let's get you signed up."
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:background="#b36da6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>