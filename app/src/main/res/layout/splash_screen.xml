<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b36da6">

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:text="Chat"
        android:src="@mipmap/ic_chat"
        android:id="@+id/tochat"
        android:scaleType="fitXY"
        android:drawableBottom="@mipmap/ic_chat"
        android:drawableTop="@mipmap/ic_chat"
        android:layout_alignTop="@+id/tojobs"
        android:layout_toEndOf="@+id/tojobs" />

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:text="Jobs"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_jobs"
        android:id="@+id/tojobs"
        android:drawableBottom="@mipmap/ic_jobs"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>