<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="45dp"
    android:background="#b36da6">

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="300dp"
        android:layout_height="32dp"
        android:textColor="#b32599"
        android:background="#ffffff"
        android:layout_marginBottom="11dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/my_spinner"
        android:layout_alignStart="@+id/my_spinner" />

    <Spinner
        android:id="@+id/my_spinner"
        android:background="#ffffff"
        android:textColor="#b32599"
        android:layout_width="300dp"
        android:layout_height="32dp"
        android:layout_marginTop="47dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/being_an_amazing"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to work in"
        android:id="@+id/to_work_in"
        android:singleLine="true"
        android:paddingEnd="5dp"
        android:textSize="14sp"
        android:textColor="#fefefe"
        android:layout_alignBottom="@+id/spinner1" />

    <TextView
        android:id="@+id/gcses"
        android:textSize="12sp"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="#ffffff"
        android:textColor="#573e73"
        android:layout_below="@+id/gcse_label"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="GCSEs"
        android:id="@+id/gcse_label"
        android:layout_below="@+id/typical"
        android:layout_alignStart="@+id/degree_label"
        android:layout_marginTop="33dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Alevels"
        android:id="@+id/alevel_label"
        android:layout_below="@+id/gcse_label"
        android:layout_alignStart="@+id/gcse_label"
        android:layout_marginTop="47dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/degree"
        android:textSize="14sp"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="#ffffff"
        android:textColor="#573e73"
        android:textIsSelectable="false"
        android:layout_below="@+id/degree_label"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/alevels"
        android:textSize="13sp"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="#ffffff"
        android:textColor="#573e73"
        android:layout_below="@+id/alevel_label"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/job_description"
        android:layout_toEndOf="@+id/alevel_label"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:scrollbars="vertical"
        android:textColor="#573e73"
        android:fontFamily="san-serif-thin"
        android:textStyle="italic"
        android:background="#ffffff"
        android:layout_below="@+id/my_spinner"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/other_qualifications"
        android:layout_toEndOf="@+id/alevel_label"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:scrollbars="vertical"
        android:textColor="#573e73"
        android:fontFamily="san-serif-thin"
        android:textStyle="italic"
        android:background="#ffffff"
        android:layout_below="@+id/job_description"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="being an amazing"
        android:id="@+id/being_an_amazing"
        android:paddingEnd="5dp"
        android:textSize="13sp"
        android:textColor="#fefefe"
        android:layout_alignBottom="@+id/my_spinner"
        android:layout_alignStart="@+id/gcse_label"
        android:layout_alignEnd="@+id/degree"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Degree"
        android:id="@+id/degree_label"
        android:layout_marginTop="27dp"
        android:textColor="#020202"
        android:layout_below="@+id/alevels"
        android:layout_alignEnd="@+id/degree"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Typically you need"
        android:textColor="#ffffff"
        android:id="@+id/typical"
        android:textSize="14dp"
        android:layout_alignTop="@+id/job_description"
        android:layout_alignStart="@+id/gcse_label"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dip"
        android:layout_marginBottom="40dip"
        android:text="Signup (ps.I should be a link)"
        android:onClick="onClick"
        android:layout_below="@+id/degree"
        android:gravity="center"
        android:textSize="20dip"
        android:textColor="#025f7c"/>


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.Toolbar>




</RelativeLayout>
